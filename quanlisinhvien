using System;
using System.Collections.Generic;
using System.ComponentModel;           // BindingList
using System.Globalization;            // CharUnicodeInfo
using System.Linq;
using System.Text;                     // Normalization
using System.Text.RegularExpressions;  // Regex
using System.Drawing;                  // Point, Size
using System.Windows.Forms;

namespace BaiTap3h
{
    public partial class Form1 : Form
    {
        private readonly BindingList<Student> students = new BindingList<Student>(); // dữ liệu gốc
        private readonly BindingSource view = new BindingSource();                    // dữ liệu hiển thị (có lọc)
        private readonly Dictionary<string, bool> sortAsc = new Dictionary<string, bool>(); // trạng thái sort

        // UI bổ sung (theo Câu 2)
        private ComboBox cmbLocKhoa;   // lọc theo khoa (Tất cả/QTKD/CNTT/NNA)
        private Button btnDoiMau;      // đổi màu giao diện
        private Button btnDoiFont;     // đổi font giao diện

        public Form1()
        {
            InitializeComponent();

            // ===== DataGridView =====
            dgvStudent.AutoGenerateColumns = false;
            dgvStudent.AllowUserToAddRows = false;
            dgvStudent.SelectionMode = DataGridViewSelectionMode.FullRowSelect;
            dgvStudent.MultiSelect = false;
            dgvStudent.ReadOnly = true;

            dgvStudent.ColumnHeaderMouseClick += dgvStudent_ColumnHeaderMouseClick;
            dgvStudent.CellClick += dgvStudent_CellClick;
            dgvStudent.CellContentClick += dgvStudent_CellClick; // yêu cầu dùng CellContentClick

            // Nguồn dữ liệu
            view.DataSource = students;
            dgvStudent.DataSource = view;

            // Tạo & map cột
            EnsureColumns();
            EnableColumnSortUI();

            // ===== Thêm UI Câu 2 bằng code-behind =====
            BuildFilterAndStyleUI();

            // Xác nhận thoát
            this.FormClosing += Form1_FormClosing;
        }

        // ====== HANDLER THEO DESIGNER ======
        private void Form1_Load(object sender, EventArgs e)
        {
            // Items mẫu nếu rỗng
            if (cmbKhoa.Items.Count == 0)
                cmbKhoa.Items.AddRange(new object[] { "QTKD", "CNTT", "NNA" });

            if (cmbXepLoai.Items.Count == 0)
                cmbXepLoai.Items.AddRange(new object[] { "Tất cả", "Giỏi", "Khá", "Trung Bình", "Yếu" });

            // --- YÊU CẦU ĐỀ BÀI ---
            // Khoa QTKD mặc định
            if (cmbKhoa.Items.Contains("QTKD"))
                cmbKhoa.SelectedItem = "QTKD";
            else
                cmbKhoa.SelectedIndex = 0; // fallback

            // Giới tính Nữ mặc định
            otpFamale.Checked = true;

            // Tổng số SV ban đầu = 0 và vô hiệu hóa 2 ô đếm
            txtNam.Text = "0";
            txtNu.Text = "0";
            txtNam.Enabled = false;
            txtNu.Enabled = false;
            txtNam.TabStop = false;
            txtNu.TabStop = false;

            // Nhấn Enter để kích hoạt nút Tìm
            this.AcceptButton = btnTimKiem;

            UpdateStats(); // students hiện đang rỗng => 0/0
        }

        // ================== CRUD ==================
        private void btnUpdate_Click(object sender, EventArgs e)
        {
            // ===== Validation (Câu 4) =====
            if (string.IsNullOrWhiteSpace(txtMSSV.Text) ||
                string.IsNullOrWhiteSpace(txtHoTen.Text) ||
                string.IsNullOrWhiteSpace(txtDTB.Text))
            {
                MessageBox.Show("Vui lòng nhập đầy đủ thông tin!");
                return;
            }

            var mssv = txtMSSV.Text.Trim();
            var hoten = txtHoTen.Text.Trim();

            // MSSV: 10 chữ số
            if (!Regex.IsMatch(mssv, @"^\d{10}$"))
            {
                MessageBox.Show("Mã số sinh viên không hợp lệ.");
                return;
            }

            // Họ tên: chỉ chữ và khoảng trắng, 3-100 ký tự
            if (!Regex.IsMatch(hoten, @"^[\p{L}\s]{3,100}$"))
            {
                MessageBox.Show("Tên sinh viên không hợp lệ.");
                return;
            }

            // Điểm TB: số 0..10
            if (!double.TryParse(txtDTB.Text, out double dtb) || dtb < 0 || dtb > 10)
            {
                MessageBox.Show("Điểm trung bình sinh viên không hợp lệ");
                return;
            }

            string gt = otpMale.Checked ? "Nam" : "Nữ";
            string khoa = cmbKhoa.SelectedItem?.ToString() ?? "";

            // Thêm/Sửa (Câu 5)
            var sv = students.FirstOrDefault(s =>
                s.MSSV.Equals(mssv, StringComparison.OrdinalIgnoreCase));

            if (sv == null)
            {
                students.Add(new Student
                {
                    MSSV = mssv,
                    HoTen = hoten,
                    GioiTinh = gt,
                    DiemTB = dtb,
                    Khoa = khoa
                });
                MessageBox.Show("Thêm mới dữ liệu thành công!");
            }
            else
            {
                sv.HoTen = hoten;
                sv.GioiTinh = gt;
                sv.DiemTB = dtb;
                sv.Khoa = khoa;
                MessageBox.Show("Cập nhật dữ liệu thành công!");
            }

            ResetViewToAll();
            ClearForm();    // về mặc định QTKD + Nữ
            UpdateStats();  // cập nhật số nam/nữ
        }

        private void btnXoa_Click(object sender, EventArgs e)
        {
            // Câu 6: Xoá theo MSSV trong ô nhập
            var mssv = txtMSSV.Text.Trim();
            if (string.IsNullOrEmpty(mssv))
            {
                MessageBox.Show("Vui lòng nhập MSSV cần xoá.");
                return;
            }

            var sv = students.FirstOrDefault(x => x.MSSV.Equals(mssv, StringComparison.OrdinalIgnoreCase));
            if (sv == null)
            {
                MessageBox.Show("Mã sinh viên không tồn tại trong hệ thống");
                return;
            }

            var ask = MessageBox.Show("Bạn có chắc muốn xóa sinh viên này?", "Xác nhận",
                                      MessageBoxButtons.YesNo, MessageBoxIcon.Warning, MessageBoxDefaultButton.Button2);
            if (ask == DialogResult.Yes)
            {
                students.Remove(sv);
                ResetViewToAll();
                UpdateStats();
                MessageBox.Show("Xóa sinh viên thành công!");
            }
        }

        // đồng bộ ô nhập khi chọn dòng (Câu 7)
        private void dgvStudent_CellClick(object sender, DataGridViewCellEventArgs e)
        {
            if (e.RowIndex < 0 || e.RowIndex >= dgvStudent.Rows.Count) return;
            var sv = dgvStudent.Rows[e.RowIndex].DataBoundItem as Student;
            if (sv == null) return;

            txtMSSV.Text = sv.MSSV;
            txtHoTen.Text = sv.HoTen;
            (sv.GioiTinh == "Nam" ? otpMale : otpFamale).Checked = true;
            txtDTB.Text = sv.DiemTB.ToString();
            cmbKhoa.SelectedItem = sv.Khoa;
        }

        // ================== TÌM & LỌC ==================
        private void btnTimKiem_Click(object sender, EventArgs e)
        {
            FilterAndShow(); // dùng 1 hàm chung
        }

        private void cmbXepLoai_SelectedIndexChanged(object sender, EventArgs e)
        {
            FilterAndShow(); // lọc kết hợp từ khoá + xếp loại + khoa
        }

        private void FilterAndShow()
        {
            string kw = Unaccent(txtTimKiem.Text.Trim()).ToLower();

            IEnumerable<Student> q = students;

            if (!string.IsNullOrEmpty(kw))
            {
                q = q.Where(s =>
                    Unaccent(s.MSSV ?? "").ToLower().Contains(kw) ||
                    Unaccent(s.HoTen ?? "").ToLower().Contains(kw) ||
                    Unaccent(s.Khoa ?? "").ToLower().Contains(kw));
            }

            // Lọc theo khoa trên giao diện (Câu 2)
            var chonKhoa = cmbLocKhoa?.SelectedItem?.ToString();
            if (!string.IsNullOrEmpty(chonKhoa) && chonKhoa != "Tất cả")
            {
                q = q.Where(s => s.Khoa == chonKhoa);
            }

            // Lọc theo xếp loại
            switch (cmbXepLoai.SelectedItem?.ToString())
            {
                case "Giỏi": q = q.Where(s => s.DiemTB >= 8); break;
                case "Khá": q = q.Where(s => s.DiemTB >= 6.5 && s.DiemTB < 8); break;
                case "Trung Bình": q = q.Where(s => s.DiemTB >= 5 && s.DiemTB < 6.5); break;
                case "Yếu": q = q.Where(s => s.DiemTB < 5); break;
                    // "Tất cả": không lọc thêm
            }

            ApplyFilteredList(q.ToList());   // chỉ hiện kết quả → phần còn lại ẩn
        }

        // Bỏ dấu để tìm không phân biệt dấu
        private static string Unaccent(string input)
        {
            if (string.IsNullOrEmpty(input)) return string.Empty;
            string formD = input.Normalize(NormalizationForm.FormD);
            var chars = formD.Where(c => CharUnicodeInfo.GetUnicodeCategory(c) != UnicodeCategory.NonSpacingMark).ToArray();
            return new string(chars).Normalize(NormalizationForm.FormC);
        }

        // ================== SẮP XẾP ==================
        private void dgvStudent_ColumnHeaderMouseClick(object sender, DataGridViewCellMouseEventArgs e)
        {
            if (dgvStudent.Columns.Count == 0) return;

            var col = dgvStudent.Columns[e.ColumnIndex];
            string prop = string.IsNullOrEmpty(col.DataPropertyName) ? col.Name : col.DataPropertyName;

            bool asc = sortAsc.ContainsKey(prop) ? !sortAsc[prop] : true;
            sortAsc[prop] = asc;

            var current = (view.DataSource as IEnumerable<Student>)?.ToList() ?? students.ToList();

            IEnumerable<Student> sorted = current;
            switch (prop)
            {
                case nameof(Student.MSSV): sorted = asc ? current.OrderBy(s => s.MSSV) : current.OrderByDescending(s => s.MSSV); break;
                case nameof(Student.HoTen): sorted = asc ? current.OrderBy(s => s.HoTen) : current.OrderByDescending(s => s.HoTen); break;
                case nameof(Student.GioiTinh): sorted = asc ? current.OrderBy(s => s.GioiTinh) : current.OrderByDescending(s => s.GioiTinh); break;
                case nameof(Student.DiemTB): sorted = asc ? current.OrderBy(s => s.DiemTB) : current.OrderByDescending(s => s.DiemTB); break;
                case nameof(Student.Khoa): sorted = asc ? current.OrderBy(s => s.Khoa) : current.OrderByDescending(s => s.Khoa); break;
                case nameof(Student.XepLoai): sorted = asc ? current.OrderBy(s => s.XepLoai) : current.OrderByDescending(s => s.XepLoai); break;
            }

            ApplyFilteredList(sorted.ToList());
        }

        // ================== TIỆN ÍCH ==================
        private void EnsureColumns()
        {
            dgvStudent.Columns.Clear();

            dgvStudent.Columns.Add(new DataGridViewTextBoxColumn
            {
                Name = "colMSSV",
                HeaderText = "MSSV",
                DataPropertyName = nameof(Student.MSSV),
                SortMode = DataGridViewColumnSortMode.Automatic,
                AutoSizeMode = DataGridViewAutoSizeColumnMode.Fill,
                FillWeight = 16
            });
            dgvStudent.Columns.Add(new DataGridViewTextBoxColumn
            {
                Name = "colHoTen",
                HeaderText = "Họ Tên",
                DataPropertyName = nameof(Student.HoTen),
                SortMode = DataGridViewColumnSortMode.Automatic,
                AutoSizeMode = DataGridViewAutoSizeColumnMode.Fill,
                FillWeight = 24
            });
            dgvStudent.Columns.Add(new DataGridViewTextBoxColumn
            {
                Name = "colGioiTinh",
                HeaderText = "Giới Tính",
                DataPropertyName = nameof(Student.GioiTinh),
                SortMode = DataGridViewColumnSortMode.Automatic,
                AutoSizeMode = DataGridViewAutoSizeColumnMode.AllCells
            });
            dgvStudent.Columns.Add(new DataGridViewTextBoxColumn
            {
                Name = "colDiemTB",
                HeaderText = "Điểm TB",
                DataPropertyName = nameof(Student.DiemTB),
                SortMode = DataGridViewColumnSortMode.Automatic,
                AutoSizeMode = DataGridViewAutoSizeColumnMode.AllCells,
                DefaultCellStyle = new DataGridViewCellStyle { Format = "0.00" }
            });
            dgvStudent.Columns.Add(new DataGridViewTextBoxColumn
            {
                Name = "colKhoa",
                HeaderText = "Khoa",
                DataPropertyName = nameof(Student.Khoa),
                SortMode = DataGridViewColumnSortMode.Automatic,
                AutoSizeMode = DataGridViewAutoSizeColumnMode.Fill,
                FillWeight = 18
            });

            // Câu 8: thêm cột Xếp loại
            dgvStudent.Columns.Add(new DataGridViewTextBoxColumn
            {
                Name = "colXepLoai",
                HeaderText = "Xếp loại",
                DataPropertyName = nameof(Student.XepLoai),
                SortMode = DataGridViewColumnSortMode.Automatic,
                AutoSizeMode = DataGridViewAutoSizeColumnMode.AllCells
            });
        }

        private void EnableColumnSortUI()
        {
            foreach (DataGridViewColumn c in dgvStudent.Columns)
                c.SortMode = DataGridViewColumnSortMode.Automatic;
        }

        private void ApplyFilteredList(List<Student> list)
        {
            view.DataSource = new BindingList<Student>(list);
            dgvStudent.DataSource = view;
            EnableColumnSortUI();
        }

        private void ResetViewToAll()
        {
            view.DataSource = students;
            dgvStudent.DataSource = view;
            EnableColumnSortUI();
        }

        private void UpdateStats()
        {
            // set text được dù Enabled=false
            txtNam.Text = students.Count(s => s.GioiTinh == "Nam").ToString();
            txtNu.Text = students.Count(s => s.GioiTinh == "Nữ").ToString();
        }

        private void ClearForm()
        {
            txtMSSV.Clear();
            txtHoTen.Clear();
            txtDTB.Clear();
            // sau khi thêm/sửa, để mặc định theo đề:
            if (cmbKhoa.Items.Contains("QTKD")) cmbKhoa.SelectedItem = "QTKD";
            else cmbKhoa.SelectedIndex = 0;
            otpFamale.Checked = true;
        }

        // ===== UI phụ trợ: ComboBox lọc khoa + đổi màu/đổi font (Câu 2) =====
        private void BuildFilterAndStyleUI()
        {
            // ComboBox lọc khoa
            cmbLocKhoa = new ComboBox
            {
                Name = "cmbLocKhoa",
                DropDownStyle = ComboBoxStyle.DropDownList,
                Location = new Point(364, 68),   // đặt gần vùng tìm kiếm
                Size = new Size(120, 24)
            };
            cmbLocKhoa.Items.AddRange(new object[] { "Tất cả", "QTKD", "CNTT", "NNA" });
            cmbLocKhoa.SelectedIndex = 0;
            cmbLocKhoa.SelectedIndexChanged += (s, e) => FilterAndShow();
            this.Controls.Add(cmbLocKhoa);

            // Nút đổi màu
            btnDoiMau = new Button
            {
                Name = "btnDoiMau",
                Text = "Đổi màu",
                Location = new Point(364, 12),
                Size = new Size(85, 28)
            };
            btnDoiMau.Click += (s, e) =>
            {
                using (var dlg = new ColorDialog())
                {
                    if (dlg.ShowDialog() == DialogResult.OK)
                    {
                        this.BackColor = dlg.Color;
                        dgvStudent.BackgroundColor = dlg.Color;
                    }
                }
            };
            this.Controls.Add(btnDoiMau);

            // Nút đổi font
            btnDoiFont = new Button
            {
                Name = "btnDoiFont",
                Text = "Đổi font",
                Location = new Point(455, 12),
                Size = new Size(85, 28)
            };
            btnDoiFont.Click += (s, e) =>
            {
                using (var dlg = new FontDialog())
                {
                    dlg.Font = this.Font;
                    if (dlg.ShowDialog() == DialogResult.OK)
                    {
                        this.Font = dlg.Font;       // đổi font toàn form
                        dgvStudent.Font = dlg.Font; // hoặc riêng DGV
                    }
                }
            };
            this.Controls.Add(btnDoiFont);
        }

        // ===== XÁC NHẬN THOÁT (YES/NO) =====
        private void Form1_FormClosing(object sender, FormClosingEventArgs e)
        {
            var result = MessageBox.Show(
                "Bạn có chắc muốn thoát chương trình?",
                "Xác nhận thoát",
                MessageBoxButtons.YesNo,
                MessageBoxIcon.Question,
                MessageBoxDefaultButton.Button2);

            if (result == DialogResult.No)
            {
                e.Cancel = true; // không thoát, chỉ đóng hộp thoại
            }
        }
    }

    public class Student : INotifyPropertyChanged
    {
        private double _diemTB;

        public string MSSV { get; set; }
        public string HoTen { get; set; }
        public string GioiTinh { get; set; }
        public double DiemTB
        {
            get => _diemTB;
            set
            {
                if (Math.Abs(_diemTB - value) > 1e-9)
                {
                    _diemTB = value;
                    OnPropertyChanged(nameof(DiemTB));
                    OnPropertyChanged(nameof(XepLoai)); // cập nhật hiển thị xếp loại khi điểm đổi
                }
            }
        }
        public string Khoa { get; set; }

        // Câu 8: Xếp loại tự động
        public string XepLoai =>
            _diemTB >= 8 ? "Giỏi" :
            _diemTB >= 6.5 ? "Khá" :
            _diemTB >= 5 ? "Trung Bình" : "Yếu";

        public event PropertyChangedEventHandler PropertyChanged;
        protected void OnPropertyChanged(string name) =>
            PropertyChanged?.Invoke(this, new PropertyChangedEventArgs(name));
    }
}



